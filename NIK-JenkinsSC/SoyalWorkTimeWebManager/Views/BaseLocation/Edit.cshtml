@using SoyalWorkTimeWebManager.ViewModels
@model WorkTimeModel.FacilityLocation

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>FacilityLocation</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @*@Html.LabelFor(model => model.Name.Site)*@
            Sites
        </div>
        <table class="bordered">
            @{
                List<AssignedSites> sites = ViewBag.Sites;
                foreach (var site in sites)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedSites" value="@site.SiteName" @Html.Raw(site.Assigned?"checked=\"checked\"":"")/>
                            @site.SiteName
                        </td>
                    </tr>
                }
            }
        </table>
        @Html.HiddenFor(model => model.ID)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
